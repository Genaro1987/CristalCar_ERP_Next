    PASSO_A_PASSO TEXT
    CAMPOS_OBRIGATORIOS TEXT
    CAMPOS_OPCIONAIS TEXT
    REFLEXOS_PROCESSO TEXT
    ERROS_COMUNS TEXT
    ATIVA INTEGER NOT NULL DEFAULT1
    DATA_CADASTRO TEXT NOT NULL DEFAULT'datetime('now')'
    DATA_ATUALIZACAO TEXT

